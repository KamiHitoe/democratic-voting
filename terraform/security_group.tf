
# security group
## for RDS
resource "aws_security_group" "democratic-rds-sg" {
  description = "sg for RDS"
  name   = "democratic-rds-sg"
  vpc_id = aws_vpc.democratic-vpc.id

  # psql
  ingress {
    from_port   = 5432
    to_port     = 5432
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # icmp
  ingress {
    from_port   = -1
    to_port     = -1
    protocol    = "icmp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "democratic-rds-sg"
  }
}

## for ALB
